# Streamlit Secrets Configuration Template
#
# To use this file:
# 1. Copy this file to 'secrets.toml' in the same directory
# 2. Fill in your actual API keys (never commit secrets.toml to git!)
# 3. For Streamlit Cloud: Add these secrets in the app settings UI
#
# Note: The app will work without these keys but with limited functionality

[api_keys]
# Federal Reserve Economic Data (FRED) API
# Get your free key at: https://fred.stlouisfed.org/docs/api/api_key.html
fred_api_key = "your_fred_api_key_here"

# SEC EDGAR Configuration (NO API KEY NEEDED!)
# The SEC doesn't use API keys - instead it requires a User-Agent header
# identifying who you are. Format: "Your Name your.email@example.com"
# See: https://www.sec.gov/os/accessing-edgar-data
sec_user_name = "Your Name"
sec_user_email = "your.email@example.com"

[settings]
# Risk analysis parameters
shock_pct = -0.10
risk_peer_tickers = ["AMD", "AVGO", "TSM", "ASML", "INTC"]
supply_shock_tickers = ["TSM", "ASML"]

[database]
# Database configuration (optional)
# For production, consider using external database
# Default: SQLite in data/database/dashboard.db
# db_url = "sqlite:///data/database/dashboard.db"

[cache]
# Cache settings
ttl_seconds = 300  # 5 minutes
max_entries = 1000
